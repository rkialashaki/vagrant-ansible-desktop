Vagrant.configure('2') do |config|

  #vm_box = 'ubuntu/zesty64'
  #vm_box = 'ubuntu/1804-desktop'
  vm_box = 'local/ubdesktop-1904'
  #config.ssh.private_key_path = ['./.vagrant/ssh/vagrant_rsa']
  #config.ssh.insert_key = false
  #config.ssh.forward_agent = true

  #provisioner = Vagrant::Util::Platform.windows? ? :guest_ansible : :ansible

  config.vm.define :test1904, primary: true  do |test1904|
    test1904.vm.box = vm_box
    test1904.vm.box_check_update = true
    test1904.vm.network "public_network"
    #test1904.vm.network :forwarded_port, guest: 22, host: 22000
    test1904.vm.hostname = "test1904"
    #test1904.vm.synced_folder ".", "/vagrant"
    #test1904.vm.synced_folder "./cloud", "/cloud"
    #test1904.vm.synced_folder "f:/games/emulators", "/home/vagrant/emulators"
    #test1904.vm.provision "file", source: ".vagrant/ssh/vagrant_rsa.pub", destination: "~/.ssh/authorized_keys"
    #test1904.vm.provision "shell", inline: $deps_install, privileged: true
    #test1904.vm.provision "shell", inline: $userland_install, privileged: false
    test1904.vm.provider "virtualbox" do |vb|
      vb.name = "test1904"
      vb.memory = "2048"
      vb.cpus = 2
      vb.customize [ "modifyvm", :id, "--vram", "256" ]
      vb.customize [ "modifyvm", :id, "--accelerate3d", "on" ]
      vb.customize [ "modifyvm", :id, "--usb", "on", "--usbxhci", "on" ] #USB3
      #vb.customize [ "modifyvm", :id, "--usb", "on", "--usbehci", "on" ] #USB2
    end
    #test1904.vm.provision "ansible_local" do |ansible|
    ##    ansible.verbose = "v"
    #    ansible.become = true
    #    ansible.playbook = "ansible/playbooks/type-vagrant.yml"
    #    ansible.galaxy_roles_path = "/vagrant/ansible/roles"
    #end
  end


end
